<!DOCTYPE utfx:tests PUBLIC "-//UTF-X//DTD utfx-tests 1.0//EN" "utfx_tests.dtd">
<utfx:tests xmlns:utfx="http://utfx.org/test-definition">
	<utfx:stylesheet src="absolute_xpath_tests.xsl"/>

	<utfx:test>
		<utfx:name>absolute xpath expression with template match and root context-node</utfx:name>
		<utfx:assert-equal>
			<utfx:source context-node="/">
				<root>
					<print-xml/>
				</root>
			</utfx:source>
			<utfx:expected>
				<xml>
					<absolute>
						<root>
							<print-xml/>
						</root>
					</absolute>
					<relative>
						<print-xml/>
					</relative>
				</xml>
			</utfx:expected>
		</utfx:assert-equal>
	</utfx:test>
	
</utfx:tests>
